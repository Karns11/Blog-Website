<%- include("partials/header"); -%>
<h1>Compose</h1>
<form class="" action="/compose" method="post">
    <div class="form-group">
        <label class="form-label" for="postTitle">Title</label>
        <input class="form-control" id="postTitle" type="text" name="postTitle" >
        <label class="form-label" for="postBody">Post</label>
        <textarea class="form-control" name="postBody" id="postBody" cols="50" rows="5"></textarea>
    </div>
    <button class="btn btn-primary" type="submit">Publish</button>
</form>
